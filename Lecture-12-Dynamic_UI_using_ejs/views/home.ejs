<%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <h1 class="mt-9 flex justify-center">
      <span
        class="text-3xl font-bold text-black px-8 py-12 shadow-xl rounded-md"
      >
        Here are the list of homes:
      </span>
    </h1>
  <% if(homes.length > 0) {%>
   <ul class="space-y-6 p-6 bg-white shadow-lg rounded-2xl max-w-2xl mx-auto">
  <% homes.forEach((home) => { %>
    <li
      class="flex flex-col md:flex-row items-center gap-4 p-5 bg-orange-50 border border-orange-200 rounded-xl hover:bg-orange-100 transition duration-200 shadow-md"
    >
      <!-- Home Image -->
      <img
        src="https://plus.unsplash.com/premium_photo-1689609950112-d66095626efb?q=80&w=687&auto=format&fit=crop"
        alt="Home Image"
        class="w-full md:w-40 h-32 object-cover rounded-lg shadow-sm"
      />

      <!-- Home Details -->
      <div class="flex flex-col gap-2 w-full">
        <h2 class="text-xl font-bold text-[#f57842]"><%= home.houseName %></h2>
        <p class="text-gray-600">
          📍 <span class="font-medium"><%= home.location %></span>
        </p>
        <p class="text-gray-700">
          💰 Price: <span class="font-semibold"><%= home.price %> PKR</span>
        </p>
        <p class="text-yellow-500">
          ⭐ Rating: <span class="font-semibold"><%= home.rating %></span>/5
        </p>
      </div>
    </li>
  <% }) %>
</ul>
  <% } %>
  
  </body>
</html>
